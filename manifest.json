{
  "manifest_version": 2,

  "name": "visable",
  "description": "Resolve location names in current tab into points on a globe",
  "version": "1.0",

  "browser_action": {
    "default_icon": "images/icon64.png",
    "default_popup": "popup.html",
    "default_title": "Click me!"
  },

  "permissions": ["geolocation", "activeTab", "http://*/", "https://*/"],

  "content_security_policy": "script-src 'self' 'unsafe-eval' https://js.arcgis.com; object-src 'self'"
}